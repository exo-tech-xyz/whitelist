{
  "compilerOptions": {
    "types": ["mocha", "chai"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["esnext"],
    "module": "commonjs",
    "target": "esnext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "declaration": true
  },
  "include": [
    "src/*",
    "tests/**/*.ts" // Include test files for type-checking but they won't be part of the output
  ],
  "exclude": [
    "node_modules",
    "target",
    "migrations",
    "tests" // Exclude test files from the compiled output
  ]
}
